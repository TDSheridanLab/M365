{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "TextBlock",
            "text": "Jira Assignment",
            "spacing": "Medium",
            "horizontalAlignment": "Center",
            "size": "extraLarge",
            "weight": "Bolder",
            "color": "Accent"
        },
        {
            "type": "TextBlock",
            "text": "_The new Jira: from **teams** to dreams_",
            "separator": true
        },
        {
            "type": "TextBlock",
            "text": "@{body('Parse_JSON')?['fields']?['project']?['name']} - @{body('Parse_JSON')?['fields']?['summary']}",
            "weight": "Bolder",
            "size": "Large",
            "spacing": "None",
            "wrap": true
        },
		{
            "type": "TextBlock",
            "text": "**Details**"
        },
        {
            "separator": true,
            "type": "TextBlock",
            "text": "@{body('Parse_JSON')?['fields']?['description']}",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "**Resources**"
        },
        {
            "separator": true,
            "type": "TextBlock",
            "text": "[Click Here](https://tdsheridanlab.atlassian.net/jira/software/projects/KAN/boards/1?selectedIssue=@{body('Parse_JSON')?['key']}) to View"
		}
    ]
}