{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "TextBlock",
            "text": "IT Glue Document Notification",
            "spacing": "Medium",
            "horizontalAlignment": "Center",
            "size": "ExtraLarge",
            "weight": "Bolder",
            "color": "Accent"
        },
        {
            "type": "TextBlock",
            "text": "_The Gold Standard for IT Documentation_",
            "separator": true
        },
        {
            "type": "TextBlock",
            "text": "@{body('Parse_JSON')?['title']}",
            "weight": "Bolder",
            "size": "Large",
            "spacing": "None",
            "wrap": true
        },
		{
            "type": "TextBlock",
            "text": "**Details**"
        },
        {
            "separator": true,
            "type": "TextBlock",
            "text": "@{body('Parse_JSON')?['message']}",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "**Resources**"
        },
        {
            "separator": true,
            "type": "TextBlock",
            "text": "[Click Here](@{body('Parse_JSON')?['resource']}) to View"
		}
    ]
}